<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/light_selver"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shop"
    tools:showPaths="true">




        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/relative_layout1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/shop_background_image"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true">

            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_seller"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/relative_layout1"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:src="@drawable/profile_image"
                android:scaleType="centerCrop"
                android:layout_marginTop="-50dp"
                />

            <RelativeLayout
                android:id="@+id/relative_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_seller"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text=" Mona Beauty Parlurl"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_store_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_layout2"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Clothe store"
                />

            <RelativeLayout
                android:id="@+id/relative_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_store_type"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:id="@+id/tv_seller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Mona"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_layout3"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/tv_shop_timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="9am-9pm"
                    android:textColor="@color/green"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_layout4"
                android:layout_centerHorizontal="true"

                >

                <TextView
                    android:id="@+id/tv_shop_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="S M T W T F S"
                    android:textColor="@color/green"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_layout5"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/tv_delevery_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Not Available"
                    android:textColor="@color/red"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RatingBar
                android:id="@+id/shop_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_layout6"
                android:layout_centerHorizontal="true"
                android:minHeight="10dp"
                android:minWidth="10dp"
                />
            <RelativeLayout
                android:id="@+id/relative_layout21"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background"
                android:layout_below="@+id/shop_rating">
                <ImageView
                    android:id="@+id/img_map1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/map_image"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"/>

            </RelativeLayout>

        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_call"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_boundry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/img_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/call"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_toEndOf="@+id/img_call"
            android:text="CALL"
            android:textSize="30sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/blue" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_layout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fillViewport="true"
        android:scrollbars="vertical">

    <RelativeLayout
        android:id="@+id/relative_layout20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/relative_layout12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <LinearLayout
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/img_seller_image"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_shop_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mona beauty parlur"
                    android:textSize="20sp"
                    android:textColor="@color/black"

                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_store_type2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store type"
                    android:textSize="18sp"


                    />
                <TextView
                    android:id="@+id/tv_seller_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mona "
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"

                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/tv_shop_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OPEN"
                        android:padding="2dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:textColor="@color/green"
                        android:background="@drawable/small_green_background"
                        android:textSize="16sp"


                        />
                    <TextView
                        android:id="@+id/tv_delivery_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOT DELIVERY"
                        android:layout_marginTop="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:textColor="@color/red"
                        android:background="@drawable/small_red_background"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"/>



                </LinearLayout>


            </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_seller_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/profile_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_seller_image"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/small_silver_background"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:text="4.3 stars(21)"
                android:textColor="@color/red"
                android:textSize="16sp" />


        </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/relative_layout211"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/relative_layout12"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp">
            <RelativeLayout

                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                >



                <ImageView
                    android:id="@+id/img_location_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/location"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_location_icon"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:text="1.5km"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/img_map11"
                    android:layout_toEndOf="@id/img_location_icon"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:text="Manti hasnput,ThanaBhawan,Muzaffarnagar,247777"
                    android:layout_marginStart="20dp"/>
                <ImageView
                    android:id="@+id/img_map11"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/map_image"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/relative_layout8"
            android:layout_width="match_parent"
android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@id/relative_layout211"
            android:layout_centerHorizontal="true"
            android:background="@color/background_color"
            android:layout_height="160dp"
            android:layout_marginTop="5dp"
            >


            <RelativeLayout
                android:id="@+id/relative_layout9"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="photos"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_below="@id/relative_layout9"
                android:layout_alignParentStart="true"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:scrollbars="horizontal" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_layout10"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/relative_layout8">

            <RelativeLayout
                android:id="@+id/relative_layout11"
                android:layout_width="match_parent"
               android:background="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="offers"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/relative_layout11"
                android:scrollbars="horizontal"
                android:layout_height="match_parent"/>
        </RelativeLayout>



        <LinearLayout
            android:id="@+id/linera_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_below="@+id/relative_layout10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp">
            <LinearLayout
                android:id="@+id/linear_layout_call"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_boundry"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/call" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="CALL"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_navigation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_boundry"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/navigation"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="NAVIGATE"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linera_layout_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button_boundry">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"

                        android:src="@drawable/star" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="RATE" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linera_layout_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button_boundry">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/share" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="SHARE" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linera_layout_save"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button_boundry"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/bookmark" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="SAVE"/>

            </LinearLayout>



        </LinearLayout>
</RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
