<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:id="@+id/card_view"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/shop_name"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_shop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/shop_name"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_shop_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/rating"
                     />
                <ImageView
                    android:src="@drawable/star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:id="@+id/tv_number_of_ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="5dp"
                    android:text="@string/no_of_ratings"
                    />
                <View
                    android:background="@color/black"
                    android:layout_width="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_height="5dp"/>
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="5dp"
                    android:text="@string/km"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_boundry"
                android:paddingStart="10dp"
                android:layout_gravity="end"
                android:textColor="@color/green"
                android:paddingTop="2dp"
                android:paddingEnd="10dp"
                android:paddingBottom="2dp"
                android:text="@string/company_name"
                android:textSize="10sp"

                />
            <TextView
                android:id="@+id/tv_shop_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_boundry"
                android:paddingStart="10dp"
                android:layout_gravity="end"
                android:textColor="@color/green"
                android:paddingTop="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="2dp"
                android:text="@string/open"
                android:textSize="16sp"

                />
            <TextView
                android:id="@+id/tv_delivery_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_boundry"
                android:paddingStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:textColor="@color/green"
                android:paddingTop="2dp"
                android:paddingEnd="10dp"
                android:paddingBottom="2dp"
                android:text="@string/avaliable"
                android:textSize="16sp"

                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>