<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_background">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sell_and_buy.ProductMainActivity">
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:onClick="goToBack"
        android:src="@drawable/back"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image1"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_height="150dp"
        android:src="@drawable/profile_icon"/>
    <LinearLayout
        android:id="@+id/linera_layout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_with_boarder"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/img_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:onClick="shareProduct"
                android:layout_gravity="center"
                android:src="@drawable/share"
                />
            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="@string/product_title"
                android:textColor="@color/text_dark"
                android:textSize="25sp" />
        </RelativeLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_product_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/text_dark"
                android:text="@string/product_type"
                android:textSize="20sp" />
            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/price"
                    android:textColor="@color/text_dark"
                    android:textSize="20sp" />
                <ImageView
                    android:id="@+id/img_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/pen"/>
            </LinearLayout>





        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/call" />
            <TextView
                android:id="@+id/tv_phone_1"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:textColor="@color/text_dark"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/contact_number"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/location" />
            <TextView
                android:textColor="@color/text_dark"
                android:id="@+id/tv_product_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="8"
                android:text="@string/address"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/time_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/time" />

            <TextView
                android:id="@+id/tv_store_timing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="8"
                android:text="@string/opeing_closing_time"
                android:textColor="@color/text_dark"
                android:textSize="20sp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/day_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"

            android:src="@drawable/days" />

        <LinearLayout


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_day_sunday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/s"
                android:layout_marginStart="10dp"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_day_monday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="1dp"
                android:layout_marginStart="10dp"
                android:paddingBottom="1dp"
                android:text="@string/m"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_day_tuesday"
                android:layout_width="0dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="@string/t"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_day_wednesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"

                android:text="@string/w"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/tv_day_thursday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="@string/t"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_day_friday"
                android:layout_width="0dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="@string/f"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_day_saturday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"

                android:text="@string/s"
                android:textColor="@color/green"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:id="@+id/description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_service_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/photos" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/text_dark"
                android:text="@string/product_description"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:layout_marginBottom="80dp"
            android:id="@+id/tv_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_dark"
            android:text="@string/product_description"
            android:textSize="20sp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/linera_layout">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_call"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="makePhoneCall"
            android:layout_marginEnd="20dp"
            android:background="@drawable/circuler_image_background"
            android:src="@drawable/call" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:visibility="gone"
            android:id="@+id/img_navigation"
            android:layout_width="80dp"
            android:layout_height="80dp"
           android:layout_marginStart="20dp"
            android:onClick="goToMap"
            android:background="@drawable/circuler_image_background"
            android:src="@drawable/navigation" />
    </LinearLayout>


    <LinearLayout
                android:layout_below="@id/button_layout"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/image_view_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/lower_background_white"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/first_two"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/img_product1"
                        android:layout_width="0dp"
                        android:scaleType="centerCrop"
                        android:layout_height="150dp"
                        android:src="@color/button_color"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/img_product2"
                        android:layout_width="0dp"
                        android:scaleType="centerCrop"
                        android:layout_marginStart="5dp"
                        android:layout_height="150dp"
                        android:src="@color/button_color"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                   android:id="@+id/last_two"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/img_product3"
                        android:layout_width="0dp"
                        android:scaleType="centerCrop"
                        android:layout_height="150dp"
                        android:src="@color/button_color"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/img_product4"
                        android:layout_width="0dp"
                        android:scaleType="centerCrop"
                        android:layout_marginStart="5dp"
                        android:layout_height="150dp"
                        android:src="@color/button_color"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

</RelativeLayout>
</ScrollView>
