<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context="seller.deffrent_services.CinemaShowsActivity">
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/upper_background"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="goToBack"
            android:layout_marginTop="20dp"
            android:src="@drawable/back"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/movies_shows"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_below="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:paddingEnd="20dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/button_boundry"
            android:onClick="addShow"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/img_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circuler_image_background"/>
            <TextView

                android:layout_width="match_parent"
                android:text="@string/new_show"
                android:textColor="@color/text_dark"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout

        android:background="@drawable/lower_background"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_selling_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/shows"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:background="@color/other_background"
                            android:layout_below="@id/tv_selling_product"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>