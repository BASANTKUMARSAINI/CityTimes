<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sell_and_buy.ProductActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/main_background"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_color"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/main_background"
            android:layout_height="match_parent"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >
            <RelativeLayout
                android:id="@+id/relative_layout"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/upper_background"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="80dp">
                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="goToBack"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/back"/>
                <TextView
                    android:id="@+id/tv_product_type"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/btn_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/plots"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginStart="5dp"
                    android:textSize="20sp"
                    />

</RelativeLayout>
            </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/app_bar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:id="@+id/relative_layout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background">
            <androidx.appcompat.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/search_view"
                android:layout_marginStart="15dp"
                android:background="@drawable/search_view_background"
                app:queryHint="Search here" />

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/lower_background"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/relative_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_selling_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/plot_for_selling"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view"
                                android:background="@color/other_background"
                                android:layout_below="@id/tv_selling_product"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


        </RelativeLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

