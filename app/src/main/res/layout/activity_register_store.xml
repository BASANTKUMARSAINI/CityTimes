<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:background="@color/other_background"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        tools:context="seller.RegisterStoreActivity">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:onClick="goToBack"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/tv_register_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_back"
            android:text="@string/register_your_service"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/et_store_name"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_register_line"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:hint= "@string/service_name"
            android:textSize="18sp"

            android:layout_marginEnd="10dp"/>
        <EditText
            android:id="@+id/et_owner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@+id/et_store_name"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:hint= "@string/owner_s_name"
            android:textSize="18sp"
            android:layout_marginEnd="10dp"/>
        <EditText
            android:id="@+id/et_seller_phone_1"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_owner_name"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:hint= "@string/mobile_number1"
            android:textSize="18sp"

            android:layout_marginEnd="10dp"/>
        <EditText
            android:id="@+id/et_seller_phone_2"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_seller_phone_1"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:hint= "@string/mobile_number2_optional"
            android:textSize="18sp"

            android:layout_marginEnd="10dp"/>
        <EditText
            android:id="@+id/et_store_address"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_seller_phone_2"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:hint= "@string/address"
            android:textSize="18sp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tv_current_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_store_address"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/pop_up_botton_background"
            android:onClick="getCurrentLocation"
            android:paddingStart="5dp"
            android:textColor="@color/text_dark"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/current_location"
            android:textSize="16sp" />
        <LinearLayout
            android:id="@+id/linera_layout"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_current_location"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_store_country"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="@drawable/pop_up_botton_background"
                android:text="@string/select_country"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/text_dark"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:onClick="getCountry"
                 />
            <TextView
                android:id="@+id/tv_store_state"
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:background="@drawable/pop_up_botton_background"
                android:text="@string/select_state"
                android:textColor="@color/text_dark"
                android:layout_marginEnd="5dp"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:onClick="getState"
                />
            <TextView
                android:id="@+id/tv_store_city"
                android:layout_width="0dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="2"
                android:layout_marginStart="5dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/pop_up_botton_background"
                android:text="@string/select_city"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:onClick="getCity"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linera_layout_2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linera_layout"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_store_category"
                android:layout_width="0dp"
                android:textColor="@color/text_dark"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/pop_up_botton_background"
                android:onClick="getCategory"
                android:text="@string/store_category"
                android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_store_sub_category"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_dark"
            android:layout_height="wrap_content"
            android:background="@drawable/pop_up_botton_background"
            android:text="@string/store_sub_category"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_horizontal"
            android:layout_marginStart="5dp"
            android:textSize="16sp"
            android:onClick="getSubCategory"
            />
        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:onClick="storeRegistration"
            android:text="@string/register"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/linera_layout_2"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"/>

<LinearLayout
    android:id="@+id/relative_layout3"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btn_register"
    android:gravity="center_horizontal"
    android:layout_marginTop="20dp">
    <TextView
        android:textColor="@color/text_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/by_registering_you_agree_to"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/selver"
        android:text="@string/term_and_conditions"/>

</LinearLayout>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_layout3"
            android:layout_marginBottom="50dp"
            android:gravity="center_horizontal"
            >
            <TextView
                android:textColor="@color/text_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/and"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selver"
                android:text="@string/privacy_policy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:text="@string/of_the_my_city"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
