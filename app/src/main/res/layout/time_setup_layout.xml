<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Store timings"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"

            android:text="From:"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_from_h"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:hint="0"
                android:inputType="number"
                android:textColor="@color/selver"
                 android:textColorHint="@color/black"
                android:textSize="50sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/et_from_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:hint="00"
                android:textColor="@color/selver"
                android:textColorHint="@color/black"
                android:textSize="50sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/t_from_am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                style="@style/toggleButton"
                android:textOff="AM"
                android:textOn="AM"
                android:textSize="14dp" />

            <ToggleButton
                android:id="@+id/t_from_pm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/toggleButton"
                android:textOff="PM"
                android:textOn="PM"
                android:textSize="14dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="To:"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_to_h"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:hint="0"
                android:inputType="number"
                android:textColor="@color/selver"
                android:textColorHint="@color/black"
                android:textSize="50sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/et_to_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:hint="00"
                android:inputType="number"
                android:textColor="@color/selver"
                android:textColorHint="@color/black"
                android:textSize="50dp"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/t_to_am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/toggleButton"
                android:textOff="AM"
                android:textOn="AM"
                android:textSize="14dp" />

            <ToggleButton
                android:id="@+id/t_to_pm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/toggleButton"
                android:textOff="PM"
                android:checked="true"
                android:textOn="PM"
                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"


            android:text="Days:"
android:layout_gravity="center_vertical"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/tSunday"
                style="@style/toggleButton"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"

                android:textOff="S"
                android:textOn="S"
                android:textSize="18sp" />

            <ToggleButton
                android:id="@+id/tMonday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                style="@style/toggleButton"
                android:checked="true"
                android:textOff="M"
                android:textOn="M"
                android:textSize="18sp" />

            <ToggleButton
                android:id="@+id/tTuseday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                style="@style/toggleButton"
                android:checked="true"

                android:textOff="T"
                android:textOn="T"
                android:textSize="18dp" />

            <ToggleButton
                android:id="@+id/tWednesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                style="@style/toggleButton"
                android:checked="true"
                android:textOff="W"
                android:textOn="W"
                android:textSize="18dp" />

            <ToggleButton
                android:id="@+id/tThursday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                style="@style/toggleButton"
                android:checked="true"
                android:textOff="T"
                android:textOn="T"
                android:textSize="18dp" />

            <ToggleButton
                android:id="@+id/tFriday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                style="@style/toggleButton"
                android:checked="true"
                android:textOff="F"
                android:textOn="F"
                android:textSize="18dp" />

            <ToggleButton
                android:id="@+id/tSaturday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                style="@style/toggleButton"
                android:checked="true"
                android:textOff="S"
                android:textOn="S"
                android:textSize="18dp" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_background"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="20dp" />


</LinearLayout>