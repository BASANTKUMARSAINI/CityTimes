<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_home_delivery_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Home Delivery Service"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/img_yes"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="70dp"
        android:layout_below="@+id/tv_home_delivery_service"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_right_green"/>

    <ImageView
        android:id="@+id/img_no"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_home_delivery_service"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="70dp"
        android:src="@drawable/ic_cross" />
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_yes"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_background"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="NEXT"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>
</androidx.cardview.widget.CardView>