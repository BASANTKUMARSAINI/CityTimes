<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    tools:context="authantication.UserRegisterActivity">
     <ImageView
         android:id="@+id/img_back"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_alignParentStart="true"
         android:layout_alignParentTop="true"
         android:layout_marginTop="20dp"
         android:src="@drawable/back"/>
    <TextView
        android:id="@+id/tv_register_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_back"
        android:text="register to My City"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:paddingStart="10dp"
        android:textSize="25dp"/>
    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_register_line"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:hint= "Full Name"
        android:textSize="18sp"

        android:layout_marginEnd="10dp"/>
    <EditText
        android:id="@+id/et_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/et_user_name"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:hint= "Email"
        android:textSize="18sp"
        android:layout_marginEnd="10dp"/>
    <EditText
        android:id="@+id/et_user_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_email"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:hint= "Password"
        android:textSize="18sp"

        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/tv_user_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_password"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:background="@drawable/pop_up_botton_background"
        android:text="Select Country"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="18sp"
        android:onClick="getCountry"
        android:paddingStart="10dp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/tv_user_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_country"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:background="@drawable/pop_up_botton_background"
        android:text="Select State"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:onClick="getState"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/tv_user_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_state"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:background="@drawable/pop_up_botton_background"
        android:text="Select City"
        android:paddingBottom="5dp"
        android:onClick="getCity"
        android:paddingTop="5dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:layout_marginEnd="10dp"/>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:onClick="userRegistration"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_user_city"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_terms_and_conditions"
        android:text="By registering you agree to Terms-Conditions and Private Policy of the My City"
        android:textSize="12sp"
        android:layout_below="@id/btn_register"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
</ScrollView>
