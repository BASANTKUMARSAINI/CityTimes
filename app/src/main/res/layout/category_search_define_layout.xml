<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="50dp"
    android:paddingTop="10dp"
    android:paddingStart="20dp"
    android:background="@color/other_background"
    android:paddingEnd="20dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_cross"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/cross"
        android:layout_marginEnd="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/define_search"
        android:layout_centerHorizontal="true"
         android:layout_below="@+id/img_cross"
        android:text="@string/define_search"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="@color/text_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
     <LinearLayout
         android:layout_below="@id/define_search"
         android:layout_width="match_parent"
         android:layout_marginTop="20dp"
         android:orientation="vertical"
         android:gravity="center_horizontal"
         android:layout_height="wrap_content">
         <LinearLayout
             android:gravity="center_horizontal"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/sub_category_name"
                 android:textColor="@color/text_dark"
                 android:textSize="18sp"/>
             <CheckBox
                 android:id="@+id/sub_category_name_checkbox"
                 android:layout_marginStart="22dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

         </LinearLayout>

         <LinearLayout
             android:gravity="center_horizontal"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/category_name"
                 android:textColor="@color/text_dark"
                 android:textSize="18sp"/>
             <CheckBox
                 android:id="@+id/category_name_checkbox"
                 android:layout_marginStart="25dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

         </LinearLayout>

     </LinearLayout>
    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="@string/apply"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</RelativeLayout>