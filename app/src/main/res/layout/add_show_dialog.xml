<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:background="@color/other_background"
    android:paddingTop="20dp"
    android:paddingBottom="70dp"
    android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:text="@string/show_time"
                    android:textSize="18sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/text_dark"
                        android:text="@string/from"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_time_from_hh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingStart="10dp"
                        android:paddingBottom="5dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/text_dark"
                        android:background="@drawable/pop_up_botton_background"
                        android:text="@string/hh"
                        android:layout_marginStart="30dp"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:gravity="center_vertical"
                        android:textSize="25sp"
                        android:textColor="@color/text_dark"
                        android:layout_gravity="center_vertical"

                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_time_from_mm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/pop_up_botton_background"
                        android:text="@string/mm"
                        android:textColor="@color/text_dark"
                        android:paddingStart="10dp"
                        android:textSize="16sp" />
                    <ToggleButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn="@string/pm"
                        android:textOff="@string/am"
                        android:id="@+id/from_am"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"

                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/background_white"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/text_dark"
                        android:text="@string/to"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_time_to_hh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingStart="10dp"
                        android:paddingBottom="5dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/pop_up_botton_background"
                        android:text="@string/hh"
                        android:textColor="@color/text_dark"
                        android:layout_marginStart="50dp"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:gravity="center_vertical"
                        android:textSize="25sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_time_to_mm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/pop_up_botton_background"
                        android:text="@string/mm"
                        android:textColor="@color/text_dark"
                        android:paddingStart="10dp"
                        android:textSize="16sp" />
                    <ToggleButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn="@string/am"
                        android:textOff="@string/pm"
                        android:id="@+id/to_am"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/background_white"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"

                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/et_movie_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:inputType="text"
                    android:hint="@string/movie_name"
                    />
                <EditText
                    android:id="@+id/et_movie_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="0dp"
                    android:inputType="text"
                    android:hint="@string/tickit_price"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/button_background"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/btn_add_show"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/add"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/button_background"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

</RelativeLayout>