<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/background_color_yellow"
    android:layout_height="match_parent"
    tools:context="seller.StoreActivity">

         <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:onClick="goToBack"
        android:src="@drawable/back"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/img_background_card"
        android:layout_below="@+id/btn_back"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/background_color_yellow"
        android:layout_height="180dp">


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_centerVertical="true"
    android:background="@color/background_color_yellow"
    android:layout_height="180dp">


    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/btn_back"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/map_image" />
</androidx.cardview.widget.CardView>
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:layout_centerHorizontal="true"
        android:layout_width="102dp"
        android:layout_below="@+id/img_background_card"
        android:layout_height="102dp"
        android:layout_marginTop="-51dp"
        android:src="@drawable/profile_icon"/>

    <LinearLayout
        android:id="@+id/linera_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_with_boarder"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView

                android:id="@+id/tv_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="Store Name"
                android:onClick="updateStoreName"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/update_store_name"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:src="@drawable/pen"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:onClick="updateOwnerName"
                android:gravity="center_horizontal"
                android:text="Seller Name"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/update_owner_name"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:src="@drawable/pen"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rating_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/tv_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="20sp"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/call" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8">

                <TextView
                    android:id="@+id/tv_phone_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="9027385476"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text=" , "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_phone_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="7766812858"
                    android:textSize="20sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/update_phone"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:onClick="updatePhoneNumber"
                android:layout_weight="1"
                android:src="@drawable/pen"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/tv_store_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"

                android:layout_weight="8"
                android:text="Manti hasnpur,Thanabhawan,Shamli"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/update_store_address"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:onClick="updateStoreAddress"
                android:layout_weight="1"
                android:src="@drawable/pen"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/time" />

            <TextView
                android:id="@+id/tv_store_timing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="8"
                android:text="9am-9pm"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/update_store_time"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="updateStoreTime"
                android:src="@drawable/pen"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:src="@drawable/days" />

            <LinearLayout
                android:id="@+id/relative_layout5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_weight="7"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_day_sunday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S "
                    android:textColor="@color/green"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_day_monday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:text="M "
                    android:textColor="@color/green"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_day_tuesday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="T "
                    android:textColor="@color/green"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_day_wednesday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="W "
                    android:textColor="@color/green"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_day_thursday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="T "
                    android:textColor="@color/green"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_day_friday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="F "
                    android:textColor="@color/green"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_day_saturday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="S "
                    android:textColor="@color/green"
                    android:textSize="18sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"/>

            <ImageView
                android:id="@+id/update_days"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:onClick="updateDays"
                android:src="@drawable/pen"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/bike" />

            <TextView
                android:id="@+id/tv_delivery_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="8"

                android:text="Home Delivery Not Available"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/update_delivery_status"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:onClick="updateHomeDeliveryStatus"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/pen"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/workers" />

            <TextView
                android:id="@+id/tv_workers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="8"
                android:text="Workers required!"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/update_workers"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="updateWorkers"
                android:src="@drawable/pen"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/photos_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/photos" />

            <TextView
                android:id="@+id/tv_see_all_photos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="8"
                android:text="See all photos"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/update_all_photos"
                android:layout_width="0dp"
                android:onClick="seeAllPhotos"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/pen" />


        </LinearLayout>


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_change"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/linera_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="50dp"
        android:onClick="setVisiblity"
        android:background="@drawable/circuler_image_background"
        android:src="@drawable/pen" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/linera_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp">
        <Button

            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
android:visibility="gone"
             android:layout_marginEnd="10dp"
            android:onClick="setVisibilityGone"

            android:layout_marginBottom="50dp"
            android:background="@drawable/button_background"
            android:text="CANCEL"
            android:textColor="@color/white" />
        <Button

            android:id="@+id/btn_apply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
android:layout_marginStart="10dp"
             android:visibility="gone"
            android:onClick="applyAllChanges"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_background"
            android:text="Apply"
            android:textColor="@color/white" />

    </LinearLayout>





</RelativeLayout>
</ScrollView>
